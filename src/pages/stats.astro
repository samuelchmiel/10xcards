---
import Layout from "@/layouts/Layout.astro";
import { LogoutButton } from "@/components/auth/LogoutButton";
import { Statistics } from "@/components/stats/Statistics";

export const prerender = false;

const user = Astro.locals.user;
const accessToken = Astro.cookies.get("sb-access-token")?.value ?? "";

if (!user) {
  return Astro.redirect("/login");
}
---

<Layout title="Statistics - 10xCards">
  <div class="min-h-screen bg-background" data-testid="stats-page">
    <header class="border-b">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="flex items-center gap-6">
          <a href="/dashboard" class="text-2xl font-bold hover:opacity-80 transition-opacity">10xCards</a>
          <nav class="flex items-center gap-4">
            <a
              href="/dashboard"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              data-testid="nav-dashboard"
            >
              Dashboard
            </a>
            <a href="/stats" class="text-sm font-medium text-foreground" data-testid="nav-stats"> Stats </a>
            <a
              href="/profile"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              data-testid="nav-profile"
            >
              Profile
            </a>
          </nav>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-muted-foreground">{user?.email}</span>
          <LogoutButton client:load />
        </div>
      </div>
    </header>
    <main class="container mx-auto px-4 py-6 max-w-6xl">
      <Statistics client:load accessToken={accessToken} />
    </main>
  </div>
</Layout>
