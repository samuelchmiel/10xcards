---
import Layout from "@/layouts/Layout.astro";
import { LogoutButton } from "@/components/auth/LogoutButton";
import { Dashboard as DashboardComponent } from "@/components/dashboard/Dashboard";

const user = Astro.locals.user;
const accessToken = Astro.cookies.get("sb-access-token")?.value ?? "";
---

<Layout title="Dashboard - 10xCards">
  <div class="min-h-screen bg-background" data-testid="dashboard">
    <header class="border-b h-[73px]">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <h1 class="text-2xl font-bold">10xCards</h1>
        <div class="flex items-center gap-4">
          <span class="text-sm text-muted-foreground">{user?.email}</span>
          <LogoutButton client:load />
        </div>
      </div>
    </header>
    <DashboardComponent client:load accessToken={accessToken} />
  </div>
</Layout>
